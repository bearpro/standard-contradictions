<!DOCTYPE html>
<html lang="en" data-csrf="@ViewData["CsrfToken"]" data-last-saved="@ViewData["LastSavedUtc"]">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ddl-ltlf demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light" data-username="@ViewData["UserDisplayName"]">
    <header class="bg-white border-bottom shadow-sm">
        <div class="container py-3 d-flex flex-wrap align-items-center justify-content-between gap-3">
            <div class="d-flex flex-wrap align-items-center gap-2">
                <span class="fw-semibold">Project:</span>
                <span id="project-name" class="fw-semibold" contenteditable="true">@ViewData["ProjectName"]</span>
                <div class="btn-group btn-group-sm ms-3" role="group">
                    <button class="btn btn-outline-primary" id="btn-open-project" type="button">Open project</button>
                    <button class="btn btn-outline-secondary" id="btn-new-project" type="button">New project</button>
                    <button class="btn btn-primary" id="btn-save-project" type="button">Save project</button>
                </div>
            </div>
            <div class="text-muted small">User: <span id="user-name">@ViewData["UserDisplayName"]</span></div>
        </div>
    </header>
    <main class="container py-4">
        @RenderBody()
    </main>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="app-toast" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body" id="toast-message">Error</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/htmx.org@2.0.3" integrity="sha384-SfewSS5aTcJcr4IVJu8UA5YJXNqsQxkelHh9Hx8w5ZUyrO1zcmtG8RxJrByXrZeY" crossorigin="anonymous"></script>
    <script src="~/js/project.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
